datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?

  trees  Tree[]
  person Person[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Tree {
  id   String @id @default(cuid())
  name String

  person Person[]

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Person {
  id        String @id @default(cuid())
  firstName String

  secondName String

  thirdName String
  birthday  String

  gender Gender

  father   Person? @relation("Parent", fields: [fatherId], references: [id])
  mother   Person? @relation("Parent")
  fatherId String? @unique
  motherId String? @unique

  spouseId String? @unique
  husband  Person? @relation("Spouse", fields: [spouseId], references: [id])
  wife     Person? @relation("Spouse")

  ex         Person[] @relation("Ex")
  exRelation Person[] @relation("Ex")

  bio String?

  trees Tree[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
}
